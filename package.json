{
  "name": "next-js-study",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run init:db && prisma generate && next dev",
    "build": "prisma db push --accept-data-loss && prisma generate && next build",
    "build:local": "npm run init:db && prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "gen:sitemap": "node scripts/sitemap.js",
    "restart": "npm run build && npm run start",
    "init:db": "dotenv -e .env.local -- npx prisma db push  --accept-data-loss",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "@next/font": "^13.0.5",
    "@prisma/client": "^4.6.1",
    "@react-icons/all-files": "^4.1.0",
    "@toast-ui/editor-plugin-color-syntax": "^3.0.3",
    "@toast-ui/react-editor": "^3.1.3",
    "axios": "^0.26.1",
    "babel-plugin-styled-components": "^2.0.6",
    "next": "^13.0.5",
    "next-auth": "^4.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "react-query": "^3.39.1",
    "recoil": "^0.6.1",
    "styled-components": "^5.3.3",
    "styled-reset": "^4.4.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/react": "17.0.41",
    "@types/styled-components": "^5.1.24",
    "@types/uuid": "^8.3.4",
    "dotenv-cli": "^6.0.0",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "globby": "^10.0.2",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "prisma": "^4.6.1",
    "typescript": "4.6.2"
  }
}
